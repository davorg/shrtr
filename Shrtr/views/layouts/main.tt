<!DOCTYPE html> 
<html lang="en">
[% USE Dumper -%]
<!-- [% Dumper.dump(session) %] -->
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Shrtr</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="[% request.uri_base %]/css/style.css" />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Shrtr</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            [% IF user -%]
            <li class="nav-item">
              <a class="nav-link" href="/user/[% user %]">Profile</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/submit">Submit URL</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li>
            [% ELSE -%]
            <li class="nav-item">
              <a class="nav-link" href="/register">Register</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/login">Login</a>
            </li>
            [% END -%]
          </ul>
        </div>
      </div>
    </nav>

    <div class="container mt-4">
      <div class="row">
        <div class="col-md-3">
          <div class="list-group">
            <h5 class="list-group-item">Shortcuts</h5>
            <a href="/" class="list-group-item list-group-item-action">Home</a>
            [% IF user -%]
            <a
              href="/user/[% user %]"
              class="list-group-item list-group-item-action"
              >Your Profile</a
            >
            <a
              href="/submit"
              class="list-group-item list-group-item-action"
              >Submit URL</a
            >
            <a
              href="/logout"
              class="list-group-item list-group-item-action"
              >Logout</a
            >
            [% ELSE -%]
            <a
              href="/register"
              class="list-group-item list-group-item-action"
              >Register</a
            >
            <a
              href="/login"
              class="list-group-item list-group-item-action"
              >Login</a
            >
            [% END -%]
          </div>
          <div class="list-group mt-3">
            <h5 class="list-group-item">More Details</h5>
            <a
              href="/about"
              class="list-group-item list-group-item-action"
              >About Shrtr</a
            >
            <a
              href="/about/team"
              class="list-group-item list-group-item-action"
              >About the Team</a
            >
          </div>
        </div>
        <div class="col-md-9">
          [% content %]
        </div>
      </div>
    </div>

    <footer class="bg-light text-center py-3 mt-4">
      <div class="container">
        Powered by <a href="">Shrtr</a>
      </div>
    </footer>

    <!-- Bootstrap JS Bundle -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
    ></script>
  </body>
</html>
